<layouts xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
    <layout id="MainLayout">

        <drawable class="Background" />

        <label id="speedValue"
            x="440"
            y="88"
            justification="Graphics.TEXT_JUSTIFY_VCENTER"
            font="Graphics.FONT_NUMBER_THAI_HOT"
        />

        <!-- Velocidad Media - Lado izquierdo -->
        <label id="avgSpeedUnits"
            x="15"
            y="87"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <label id="avgSpeedValue"
            x="88"
            y="87"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <!-- Velocidad Máxima - Lado izquierdo debajo de la media -->
        <label id="maxSpeedUnits"
            x="15"
            y="123"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <label id="maxSpeedValue"
            x="88"
            y="123"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <!-- Frecuencia Cardíaca - Lado derecho debajo de la distancia -->
        <label id="heartRateValue"
            x="120"
            y="240"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_NUMBER_MEDIUM"
        />
        <label id="averageHeartRate"
            x="53"
            y="108"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_TINY"
        />
        <label id="zoneHeartRate"
            x="101"
            y="108"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_TINY"
        />

        <!-- Potencia media 3s -->
        <label id="powerValue"
            x="182"
            y="77"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_NUMBER_MEDIUM"
        />
        <label id="averagePower"
            x="182"
            y="108"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_TINY"
        />

        <!-- Distancia -->
        <label
            id="distanceValue"
            x="209"
            y="130"
            font="Graphics.FONT_NUMBER_HOT"
            justification="Graphics.TEXT_JUSTIFY_RIGHT"
        />
        <label
            id="distanceNextPointValue"
            x="8"
            y="154"
            font="Graphics.FONT_TINY"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
        />
        <label
            id="nameNextPointValue"
            x="8"
            y="167"
            font="Graphics.FONT_TINY"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
        />


        <!-- Tiempo transcurrido -->
        <label
            id="elapsedHoursTimeValue"
            x="85"
            y="193"
            font="Graphics.FONT_NUMBER_MILD"
            justification="Graphics.TEXT_JUSTIFY_RIGHT"
        />
        <label
            id="elapsedTimeValue"
            x="209"
            y="188"
            font="Graphics.FONT_NUMBER_HOT"
            justification="Graphics.TEXT_JUSTIFY_RIGHT"
        />

        <!-- Altitud -->
        <label id="totalAscentValue"
            x="35"
            y="254"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <label id="totalDescentValue"
            x="35"
            y="276"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_GLANCE"
        />

        <label id="percentageGradeValue"
            x="210"
            y="247"
            font="Graphics.FONT_NUMBER_HOT"
            justification="Graphics.TEXT_JUSTIFY_RIGHT"
        />


        <!-- Footer -->
        <label id="currentTime"
            x="15"
            y="765"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_TINY"
        />

        <label id="battery"
            x="465"
            y="765"
            justification="Graphics.TEXT_JUSTIFY_RIGHT"
            font="Graphics.FONT_TINY"
        />


        <!-- Custom User Text -->
        <label id="customUserTopText"
            x="10"
            y="10"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_MEDIUM"
        />  
        <label id="customUserBottomText"
            x="center"
            y="762"
            justification="Graphics.TEXT_JUSTIFY_CENTER"
            font="Graphics.FONT_SMALL"
        />


        <!-- ICONOS -->
        <bitmap id="circleOffIcon1"
            filename="../../resources/drawables/circle-off.svg" />
        <bitmap id="circleOffIcon2"
            filename="../../resources/drawables/circle-off.svg" />
        <bitmap id="heartIcon"
            filename="../../resources/drawables/heart.svg" />
        <bitmap id="boltIcon"
            filename="../../resources/drawables/bolt.svg" />
        <bitmap id="rulerMeasureIcon"
            visible="false"
            filename="../../resources/drawables/ruler-measure.svg" />
        <bitmap
            id="rulerMeasureIconDark"
            visible="false"
            filename="../../resources/drawables/ruler-measure-dark.svg" />
        <bitmap id="clockIcon"
            filename="../../resources/drawables/clock.svg" />
        <bitmap id="clockIconDark"
            filename="../../resources/drawables/clock-dark.svg" />
        <bitmap id="speedIcon"
            filename="../../resources/drawables/speed.svg" />
        <bitmap id="speedIconDark"
            filename="../../resources/drawables/speed-dark.svg" />
        <bitmap id="percentageIcon"
            filename="../../resources/drawables/percentage.svg" />
        <bitmap id="percentageIconDark"
            filename="../../resources/drawables/percentage-dark.svg" />
        <bitmap id="arrowUpRightIcon"
            filename="../../resources/drawables/arrow-up-right.svg" />
        <bitmap
            id="arrowDownRightIcon"
            filename="../../resources/drawables/arrow-down-right.svg" />
        <bitmap
            id="arrowDownRightIconDark"
            filename="../../resources/drawables/arrow-down-right-dark.svg" />
        <bitmap
            id="arrowUpRightIconDark"
            filename="../../resources/drawables/arrow-up-right-dark.svg" />
    </layout>
</layouts>